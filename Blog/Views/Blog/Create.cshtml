@model Blog.Models.BlogViewModels.CreateBlogViewModel

@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-center">
    <form class="col-md-10" asp-controller="Blog" asp-action="Create" method="post" role="form">
        <h4 class="text-secondary">Create your new blog</h4>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <!-- /.form-group -->
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea rows="6" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <!-- /.form-group -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
        <!-- /.form-group -->
    </form>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}



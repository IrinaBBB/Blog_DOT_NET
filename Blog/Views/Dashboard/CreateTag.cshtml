@model Blog.Models.TagViewModels.CreateTagViewModel

@{
    Layout = "_AdminLayout";
}


<div class="d-flex justify-content-center">
    <form class="col-md-10" asp-controller="Dashboard" asp-action="CreateTag" method="post" role="form">
        <h4 class="text-secondary">Add new tag</h4>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Tag.Name" class="form-control">
            <span asp-validation-for="Tag.Name" class="text-danger"></span>
        </div>
        <!-- /.form-group -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
        <!-- /.form-group -->
    </form>
</div>
<div class="d-flex justify-content-center">
    <div class="col-md-10">
        <h4 class="text-secondary">Available Tags</h4>
        @foreach (var tag in Model.AllTagsList)
        {
            <a href="#" class="badge badge-dark">@tag.Name.ToUpper()</a>
        }
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}